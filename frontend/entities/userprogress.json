{
  "name": "UserProgress",
  "type": "object",
  "properties": {
    "module_id": {
      "type": "string"
    },
    "competency": {
      "type": "string"
    },
    "mastery_level": {
      "type": "number",
      "minimum": 0,
      "maximum": 100
    },
    "time_spent_minutes": {
      "type": "number",
      "default": 0
    },
    "attempts": {
      "type": "number",
      "default": 0
    },
    "last_accessed": {
      "type": "string",
      "format": "date-time"
    },
    "is_completed": {
      "type": "boolean",
      "default": false
    },
    "offline_sync_pending": {
      "type": "boolean",
      "default": false
    }
  },
  "required": [
    "module_id",
    "competency"
  ]
}
