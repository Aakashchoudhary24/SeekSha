{
  "name": "Note",
  "type": "object",
  "properties": {
    "title": {
      "type": "string"
    },
    "content": {
      "type": "string",
      "description": "Rich text content in markdown format"
    },
    "category": {
      "type": "string",
      "enum": [
        "personal",
        "course",
        "career",
        "chatbot",
        "research"
      ]
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "linked_to": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "module",
            "career",
            "chat",
            "college"
          ]
        },
        "id": {
          "type": "string"
        }
      }
    },
    "is_favorite": {
      "type": "boolean",
      "default": false
    },
    "color": {
      "type": "string",
      "default": "#FFF3CD"
    }
  },
  "required": [
    "title",
    "content"
  ]
}
